<h1>Listing rentals</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Game</th>
    <th>Date rented</th>
    <th>Date due</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rentals.each do |rental| %>
  <tr>
    <td><%= rental.customer.name %></td>
    <td><%= rental.game.title %></td>
    <td><%= rental.date_rented %></td>
    <td><%= rental.date_due %></td>
    <td><%= link_to 'Show', rental %></td>
    <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
    <td><%= link_to 'Destroy', rental, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

